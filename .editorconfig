root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Kotlin files
[*.{kt,kts}]
indent_size = 4
indent_style = space
max_line_length = 120
ij_kotlin_allow_trailing_comma = true
ij_kotlin_allow_trailing_comma_on_call_site = true


# Disable standard ktlint rules that conflict with Compose
ktlint_standard_no-wildcard-imports = disabled
ktlint_standard_function-naming = disabled
ktlint_standard_filename = disabled
ktlint_standard_backing-property-naming = disabled
ktlint_standard_multiline-expression-starts-on-new-line = disabled

# Compose-specific rules configuration
# Custom content emitters (composables that act as containers)
compose_content_emitters = KurrentCardView,QuickLookCard,KurrentFloatingActionButton

# Allowed CompositionLocal usage
compose_allowed_composition_locals = LocalDimensions

# Preview functions should be public only if they have parameters
compose_preview_public_only_if_params = true

# Allow specific naming patterns for Composable functions
compose_allowed_composable_function_names = .*Theme,.*Presenter,use.*,remember.*

# Enable compose-rules checks
compose_check_composable_metrics = true
compose_check_composable_naming = true
compose_check_composable_parameter_order = true
compose_check_preview_naming = true

# Gradle files
[*.gradle.kts]
indent_size = 4

# XML files
[*.xml]
indent_size = 4

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off
